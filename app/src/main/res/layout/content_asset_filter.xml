<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.scribblesinc.tams.AssetFilter"
    tools:showIn="@layout/activity_asset_filter">

    <ListView
        android:id="@+id/content_filter_list_view"
        android:layout_width="wrap_content"
        android:layout_height= "wrap_content" />

    <TextView
        android:id="@+id/content_filter_text_view_1"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_toLeftOf="@+id/content_filter_text_view_2"
        android:layout_alignParentLeft ="true"
        android:textColor="@color/black"
        android:textSize="15sp" />

    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"

    tools:layout_constraintTop_creator="1"
    tools:layout_constraintBottom_creator="1" />

    <TextView
        android:id="@+id/content_filter_text_view_2"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="@color/lightGray"
        android:textSize="15sp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"/>
</RelativeLayout>
